<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.WeatherExpert"/>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Theme.WeatherExpert" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/grey_bg_controls</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorError">@color/red_dark</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_text</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="actionMenuTextColor">@color/colorSecondary</item>
    </style>

</resources>